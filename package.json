{
  "name": "easyback-express",
  "version": "1.0.0",
  "description": "A simple tool to easily create the basis of your backend in Express.js.",
  "homepage": "https://github.com/BechiixD/easyback-express#readme",
  "bugs": {
    "url": "https://github.com/BechiixD/easyback-express/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BechiixD/easyback-express.git"
  },
  "license": "MIT",
  "author": "BechiixD",
  "type": "module",
  "main": "/frontend/src/main.tsx",
  "scripts": {
    "test": "./test-connection.sh",
    "start": "node ./src/index.js",
    "server": "node server.js",
    "dev": "concurrently \"npm run server\" \"cd frontend && npm run dev\"",
    "install-all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "test-connection": "./test-connection.sh"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "5.1.0",
    "zod": "4.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
